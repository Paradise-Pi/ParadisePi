{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true
	}
}
