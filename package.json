{
  "name": "ParadisePi",
  "version": "1.0.2",
  "description": "Raspberry Pi based sACN lighting/OSC sound facility control panel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "engines" : { 
    "npm" : ">=8.0.0",
    "node" : ">=16.0.0"
  },
  "dependencies": {
    "e131": "^1.1.3",
    "formidable": "^1.2.3",
    "ip": "^1.1.5",
    "knex": "^0.21.17",
    "node-pre-gyp": "^0.17.0",
    "jquery": "^3.6.0",
    "node-static": "^0.7.11",
    "sqlite3": "^5.0.0"
    "osc": "^2.4.2",
    "socket.io": "3.1.2",
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Jbithell/ParadisePi"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.4"
  },
  "author": "",
  "license": "GPL-3.0-only",
  "build": {
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "appId": "com.jbithell.paradise",
    "productName": "ParadisPi",
    "linux": {
      "category": "Utility",
      "target": []
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "asar": true,
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    },
    "deb": {},
    "artifactName": "Paradise_${os}${arch}_${version}.${ext}",
    "forceCodeSigning": false,
    "publish": null
  }
}
